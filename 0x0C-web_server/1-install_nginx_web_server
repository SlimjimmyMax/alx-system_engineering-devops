#!/usr/bin/env bash
# This script installs and configures Nginx on an Ubuntu machine.

# Install Nginx
apt-get update
apt-get install -y nginx

# Configure Nginx to listen on port 80
echo "server {
    listen 80;
    server_name localhost;

    location / {
        echo 'Hello World!';
    }
}" > /etc/nginx/sites-available/default

# Restart Nginx
service nginx restart
